//O(n) time and O(1) space
class Solution {
    public int jump(int[] nums) {
        if(nums==null || nums.length<2) return 0;
        int n = nums.length, maxReach = 0, cur = 0, jumps = 0;
        for(int i=0;i<n-1;i++) {
            maxReach = Math.max(maxReach, i+nums[i]);
            if(cur==i) {
                cur = maxReach;
                jumps++;
            }
        }
        return jumps;
    }
}
