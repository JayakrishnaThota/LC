//O(n) time and O(1) space
class Solution {
    public boolean checkPossibility(int[] nums) {
        int count = 0;
        for(int i=1;i<nums.length;i++){
            if(nums[i-1]>nums[i]){
                count++;
                //We can either increase nums[i] or decrease nums[i-1]
                //Increase nums[i]
                if(i-2>=0 && nums[i-2]>nums[i]) nums[i] = nums[i-1];
                else nums[i-1] = nums[i];
            }
        }
        return (count<=1);
    }
}
