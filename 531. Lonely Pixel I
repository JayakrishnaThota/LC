//O(mn) time and O(m+n) space
class Solution {
    public int findLonelyPixel(char[][] picture) {
        int m = picture.length;
        int n = picture[0].length;
        int[] row = new int[m];
        int[] col = new int[n];
        for(int i=0;i<m;i++){
            for(int j=0;j<n;j++){
                if(picture[i][j]=='B'){
                    row[i] = row[i]+1;
                    col[j] = col[j]+1;
                }
            }
        }
        int count  = 0;
        for(int i=0;i<m;i++){
            for(int j=0;j<n;j++){
                if(picture[i][j]=='B'){
                    if(row[i]==1 && col[j]==1) count++;
                }
            }
        }
        return count;
    }
}
