/*
Target value is n, All elements(Left edge and right edge) must converge to n

Therefore, sum of (n-1) + (n-3) + .... + 1
*/
//O(1) time and space
class Solution {
    public int minOperations(int n) {
        // int res = 0;
        // while(n>0) {
        //     res+=(n-1);
        //     n-=2;
        // }
        // return res;
        return (n*n)/4;
    }
}
