class Solution {
    public List<String> commonChars(String[] words) {
        List<String> result = new ArrayList();
        if(words==null || words.length==0) return result;
        int n = words.length;
        int[] map = new int[26];
        for(String word:words) {
            int[] temp = new int[26];
            for(char c:word.toCharArray()) {
                temp[c-'a']++;
            }
            for(int i=0;i<26;i++) {
                if(temp[i]>0) {
                    if(map[i]==0)
                    map[i] = Math.min(map[i], temp[i])
                }
            }
        }
        for(int i=0;i<26;i++) {
            if(map[i]==n) {
                int key = i+97;
                String res = (char)key + "";
                result.add(res);
            }
        }
        return result;
    }
}
