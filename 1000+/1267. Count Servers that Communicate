//O(mn) time and O(m+n) space
class Solution {
    public int countServers(int[][] grid) {
        if(grid==null || grid.length==0) return 0;
        int m = grid.length, n = grid[0].length;
        int[] rowCount = new int[m];
        int[] colCount = new int[n];
        int servers = 0;
        for(int i=0;i<m;i++) {
            for(int j=0;j<n;j++) {
                if(grid[i][j]==1) {
                    rowCount[i]++;
                    colCount[j]++;
                    servers++;
                }
            }
        }
        for(int i=0;i<m;i++) {
            for(int j=0;j<n;j++) {
                if(grid[i][j]==1) {
                    if(rowCount[i]==1 && colCount[j]==1)
                        servers--;
                }
            }
        }
        return servers;
    }
}
