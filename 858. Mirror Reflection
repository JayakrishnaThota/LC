//O(logn) time and O(1) space
class Solution {
    public int mirrorReflection(int p, int q) {
        while(p%2==0 && q%2==0){
            p/=2;
            q/=2;
        }
        if(((p&1)==0)&&((q&1)==1)) return 2;
        if(((p&1)==1)&&((q&1)==0)) return 0;
        if(((p&1)==1)&&((q&1)==1)) return 1;
        return -1;
    }
}
